# STAGING ENVIRONMENT CONFIGURATION
# Copy this to .env.staging on your staging server

# ==============================================
# APPLICATION
# ==============================================
APP_ENV=staging
DEBUG=false
APP_NAME="FastAPI Calculator (Staging)"
APP_VERSION=1.0.0

# ==============================================
# DATABASE (PostgreSQL)
# ==============================================
DATABASE_URL=postgresql://staging_user:STAGING_PASSWORD@db:5432/fastapi_staging_db
TEST_DATABASE_URL=postgresql://staging_user:STAGING_PASSWORD@db:5432/fastapi_test_db

# PostgreSQL Configuration
POSTGRES_USER=staging_user
POSTGRES_PASSWORD=STAGING_PASSWORD
POSTGRES_DB=fastapi_staging_db

# ==============================================
# REDIS (Session & Cache)
# ==============================================
REDIS_URL=redis://redis:6379/0

# ==============================================
# JWT AUTHENTICATION
# ==============================================
JWT_SECRET_KEY=staging-secret-key-min-32-characters-long-change-this
JWT_REFRESH_SECRET_KEY=staging-refresh-secret-key-min-32-chars-change
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==============================================
# SECURITY
# ==============================================
SECRET_KEY=staging-session-secret-key-change-this
ALLOWED_HOSTS=staging-api.yourdomain.com,staging.yourdomain.com
CORS_ORIGINS=https://staging.yourdomain.com

# ==============================================
# EMAIL (Optional)
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=staging@yourdomain.com
SMTP_PASSWORD=staging-email-password
SMTP_FROM=staging@yourdomain.com

# ==============================================
# MONITORING & LOGGING
# ==============================================
LOG_LEVEL=INFO
SENTRY_DSN=

# ==============================================
# CADDY (Reverse Proxy)
# ==============================================
DOMAIN=staging.yourdomain.com
API_DOMAIN=staging-api.yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# ==============================================
# PGADMIN
# ==============================================
PGADMIN_DEFAULT_EMAIL=admin@yourdomain.com
PGADMIN_DEFAULT_PASSWORD=STAGING_ADMIN_PASSWORD
