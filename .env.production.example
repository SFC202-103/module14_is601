# PRODUCTION ENVIRONMENT CONFIGURATION
# Copy this to .env.production on your production server

# ==============================================
# APPLICATION
# ==============================================
APP_ENV=production
DEBUG=false
APP_NAME="FastAPI Calculator"
APP_VERSION=1.0.0

# ==============================================
# DATABASE (PostgreSQL)
# ==============================================
DATABASE_URL=postgresql://prod_user:CHANGE_THIS_STRONG_PASSWORD@db:5432/fastapi_prod_db
TEST_DATABASE_URL=postgresql://prod_user:CHANGE_THIS_STRONG_PASSWORD@db:5432/fastapi_test_db

# PostgreSQL Configuration
POSTGRES_USER=prod_user
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
POSTGRES_DB=fastapi_prod_db

# ==============================================
# REDIS (Session & Cache)
# ==============================================
REDIS_URL=redis://redis:6379/0

# ==============================================
# JWT AUTHENTICATION
# ==============================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=CHANGE_THIS_TO_SECURE_RANDOM_64_CHAR_STRING_MIN_32_CHARACTERS_LONG_USE_OPENSSL
JWT_REFRESH_SECRET_KEY=CHANGE_THIS_DIFFERENT_SECURE_RANDOM_STRING_MIN_32_CHARACTERS_LONG
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==============================================
# SECURITY
# ==============================================
SECRET_KEY=CHANGE_THIS_TO_ANOTHER_SECURE_RANDOM_STRING_FOR_SESSIONS
ALLOWED_HOSTS=api.yourdomain.com,yourdomain.com
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ==============================================
# EMAIL (Optional - for notifications)
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourdomain.com

# ==============================================
# MONITORING & LOGGING
# ==============================================
LOG_LEVEL=WARNING
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ==============================================
# CADDY (Reverse Proxy)
# ==============================================
DOMAIN=yourdomain.com
API_DOMAIN=api.yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# ==============================================
# PGADMIN
# ==============================================
PGADMIN_DEFAULT_EMAIL=admin@yourdomain.com
PGADMIN_DEFAULT_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# ==============================================
# BACKUP
# ==============================================
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
